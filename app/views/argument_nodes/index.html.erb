<h1>Listing argument nodes</h1>

<% @argument_nodes.each do |argument_node| %>
  <p><tr>
	<td><%= argument_node.preview(40) %></td>
    <td><%= link_to 'Show', argument_node %></td>
    <td><%= link_to 'Edit', edit_argument_node_path(argument_node) %></td>
    <td><%= link_to 'Destroy', argument_node, confirm: 'Are you sure?', method: :delete %></td>
  </tr></p>
<% end %>


